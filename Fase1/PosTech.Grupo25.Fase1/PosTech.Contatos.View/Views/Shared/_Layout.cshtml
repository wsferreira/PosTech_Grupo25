<html>
<head>
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title - FIAP</title>


    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">


   

    <!-- datatable - paginação-->
   @*  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" /> *@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.css" />



</head>

<body class="">
    <div class="wrapper">
        
        <div class="main-panel">
            <!-- Navbar -->
            @*<nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">*@
            <nav class="navbar navbar-expand-lg bg-white navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <h3 class="text-dark" style="font-family:Arial, Helvetica, sans-serif">GRUPO 25</h3>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            @RenderBody()
        </div>
    </div>

    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Template/js/material-dashboard.js?v=2.1.2" type="text/javascript"></script>

    <!-- datepicker - calendario-->
    @*<script src="~/Template/jquery-ui-1.9.2.custom/js/jquery-ui-1.9.2.custom.min.js"></script>*@

    <!-- dateTimePicker - calendario com horas -->
    <!-- documentacao  https://www.jqueryscript.net/time-clock/Clean-jQuery-Date-Time-Picker-Plugin-datetimepicker.html -->
    <link rel="stylesheet" type="text/css" href="~/Template/dateTimePicker/jquery.datetimepicker.min.css" />
    <script src="~/Template/dateTimePicker/jquery.datetimepicker.full.min.js"></script>

    <script type="text/javascript">

        function ControlarMenu(idOpcaoMenuSelecionada) {

            //remover o Active dos item do MENU PRINCIPAL
            $('#menuPrincipal').children("li").each(function () {
                //controla o item principal
                if ($(this).attr('id') == idOpcaoMenuSelecionada) {
                    $('#' + idOpcaoMenuSelecionada + '').removeClass("nav-item").addClass("nav-item active");
                }
                else {
                    $(this).removeClass("nav-item active").addClass("nav-item");
                }
            });
        }

        var modal_lv = 0;
        $('.modal').on('shown.bs.modal', function (e) {
            $('.modal-backdrop:last').css('zIndex', 1051 + modal_lv);
            $(e.currentTarget).css('zIndex', 1052 + modal_lv);
            modal_lv++
        });

        $('.modal').on('hidden.bs.modal', function (e) {
            modal_lv--
        });

    </script>
    @* @Scripts.Render("~/bundles/global") *@
    @RenderSection("scripts", required: false)
</body>
</html>


<style>
    /*manter a qualidade das imagens*/
    img {
        image-rendering: optimizeSpeed; /*                     */
        image-rendering: -moz-crisp-edges; /* Firefox             */
        image-rendering: -o-crisp-edges; /* Opera               */
        image-rendering: -webkit-optimize-contrast; /* Chrome (and Safari) */
        image-rendering: optimize-contrast; /* CSS3 Proposed       */
        -ms-interpolation-mode: nearest-neighbor; /* IE8+                */
    }
    /*Tira scroll interno*/
    .perfect-scrollbar-on .sidebar, .perfect-scrollbar-on .main-panel {
        height: auto;
        max-height: none;
    }
</style>

